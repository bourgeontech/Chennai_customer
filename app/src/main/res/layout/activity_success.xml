<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.online.estore.activity.SuccessActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/curved_bottom_light_yellow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


            </ImageView>


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="80dp"
                app:cardElevation="@dimen/margin_size_20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:paddingTop="40dp"
                    android:paddingBottom="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_size_24dp"
                        android:fontFamily="@font/homepagebaukasten_bold"
                        android:text="Thank You"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size_21sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/homepagebaukasten_book"
                        android:text="For placing your order"
                        android:textColor="@color/black_light"
                        android:textSize="@dimen/text_size_14sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_size_14dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/homepagebaukasten_book"
                        android:gravity="center"

                        android:textColor="@color/black_light"
                        android:text="Our executive will call you and\ndeliver the items at your door step"
                        android:textSize="@dimen/text_size_12sp" />





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnSuggestion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/curved_light_yellow"
                            android:fontFamily="@font/iciel_gotham_medium"
                            android:paddingStart="@dimen/margin_size_20dp"
                            android:paddingEnd="@dimen/margin_size_20dp"
                            android:text="SUGGESTION BOX" />


                        <ImageView
                            android:id="@+id/imgShare"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="@dimen/margin_size_14dp"
                            android:src="@drawable/share_icon" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_size_12dp"
                        android:fontFamily="@font/homepagebaukasten_book"
                        android:text="For any changes please call our"
                        android:textSize="@dimen/text_size_12sp"
                        android:textColor="@color/black_light"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_size_8dp"
                        android:fontFamily="@font/iciel_gotham_medium"
                        android:text="Customer care"
                        android:textColor="@color/black_light"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:fontFamily="@font/iciel_gotham_medium"
                        android:text="+91 9847 132 202"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size_17sp" />


                    <Button
                        android:id="@+id/btnTick"
                        android:layout_width="142dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_size_20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn_bg_lightyellow"
                        android:text="Shop More"
                        android:elevation="40dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/topLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:visibility="invisible"
                app:cardCornerRadius="80dp"
                app:cardElevation="@dimen/margin_size_20dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        android:paddingStart="@dimen/padding_size_12dp"
                        android:paddingTop="40dp"
                        android:paddingEnd="@dimen/padding_size_12dp"
                        android:paddingBottom="40dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/homepagebaukasten_bold"
                            android:text="Thank You"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size_21sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/homepagebaukasten_book"
                            android:text="For placing your order"
                            android:textColor="@color/black_light"
                            android:textSize="@dimen/text_size_16sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_size_14dp"
                            android:fontFamily="@font/homepagebaukasten_book"
                            android:gravity="center"
                            android:text="Our executive will call you and\ndeliver the items at your door step"
                            android:textSize="@dimen/text_size_14sp" />


                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/break_the_chain_image1" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <Button

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/curved_light_yellow"
                                android:fontFamily="@font/iciel_gotham_medium"
                                android:paddingStart="@dimen/padding_size_32dp"
                                android:paddingEnd="@dimen/padding_size_32dp"
                                android:text="SUGGESTION BOX" />


                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="@dimen/margin_size_14dp"
                                android:src="@drawable/share_icon" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black_light"
                            android:layout_marginTop="@dimen/margin_size_12dp"
                            android:fontFamily="@font/homepagebaukasten_book"
                            android:text="For any changes please call our"
                            android:textSize="@dimen/text_size_12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_size_8dp"
                            android:fontFamily="@font/iciel_gotham_medium"
                            android:text="Customer care"
                            android:textColor="@color/black_light"
                            android:textSize="@dimen/text_size_14sp" />

                        <TextView
                            android:id="@+id/callCustomerCare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/margin_4dp"
                            android:fontFamily="@font/iciel_gotham_medium"
                            android:text="+91 9847 132 202"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size_16sp" />



                    </LinearLayout>

                </ScrollView>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@id/cardView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-35dp"
                android:src="@drawable/success_box_img" />



        </RelativeLayout>


    </RelativeLayout>

</layout>